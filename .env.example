# TLS Configuration
TLS_CERT_PATH=./certificates/server.crt
TLS_KEY_PATH=./certificates/server.key

# Monitoring
SECURITY_LOGGING=true
LOG_LEVEL=INFO




OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=
